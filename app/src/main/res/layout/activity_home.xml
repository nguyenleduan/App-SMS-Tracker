<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/btResend"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="0dp" />

    <Button
        android:id="@+id/btResend"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/buttom_custom"
        android:text="Resend"
        android:textStyle="bold" />

    <Button
        android:id="@+id/refesh"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="20dp"
        android:layout_toStartOf="@+id/btResend"
        android:layout_toEndOf="@+id/btSetting"
        android:background="@drawable/buttom_custom"
        android:text="Refresh"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btSetting"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/buttom_custom"
        android:text="Setting"
        android:textStyle="bold" />

</RelativeLayout>